#!/bin/bash

set -eu
. /opt/crab/crab_utils/bin/::carbon.sys

[ "${1:-}" = "--help" ] && sys::usage "$@"
### --help Example: autotest

err=0

for test in /opt/crab/crab_utils/test/test-*; do
	[ ! -x $test ] && continue
	echo
	$test || err=$((err+1))
done

/opt/crab/crab_utils/bin/crab_syntax /opt/crab/crab_utils || err=$((err+1))

[ $err != 0 ] && exit 1

exit 0
